doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/socket.io.js')

    script.
      let socket = io(window.location.origin);
      socket.on('welcome', (data) => {
          console.log(data.message);
          socket.emit('joined',{
              "message":"Client connected to the server...",
              "page": window.location.pathname
          });
      });

  body
    div(id="header" class="title flex between center-items")
      div(class="w20pc")
        div(id="title")= title
      a(href="/" class="cGreen") Brows the questions
      a(href="/ask" class="cWhite") submit a question
      a(href="/about" class="cWhite") About us
      div(class="w25pc")
      div(id="mark" class="flex end center-items w15pc")
    block content
